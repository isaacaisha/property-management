<odoo>
    <!-- list view for Supersyndics -->
    <record id="view_supersyndic_list" model="ir.ui.view">
        <field name="name">supersyndic.list</field>
        <field name="model">copro.supersyndic</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Super Syndics">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="license_id"/>
                <field name="license_type"/>
                <field name="license_start"/>
                <field name="license_end"/>
            </list>
        </field>
    </record>

    <!-- Form view for Supersyndics -->
    <record id="view_supersyndic_form" model="ir.ui.view">
        <field name="name">supersyndic.form</field>
        <field name="model">copro.supersyndic</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Super Syndics">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="license_id"/>
                        <field name="license_type"  readonly="1"/>
                        <field name="license_start" readonly="1"/>
                        <field name="license_end"   readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
